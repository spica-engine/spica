{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false,
    "types": ["node"],
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "target": "es2020",
    "sourceMap": true,
    "esModuleInterop": false,
    "paths": {
      "@spica-server/*": ["./src/*"]
    }
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts", "/**/testing.module.ts"],
  "include": ["src/**/*.ts", "src/**/*.json"],
  "references": [
    {"path": "../../libs/filter"},
    {"path": "../../libs/representative"},
    {"path": "../../libs/core"},
    {"path": "../../libs/interface"},
    {"path": "../../libs/database"}
  ]
}
