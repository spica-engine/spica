{
  "$id": "http://spica.internal/function/enqueuer/http",
  "title": "Http",
  "description": "Http enqueuer for functions",
  "type": "object",
  "required": ["path", "method"],
  "properties": {
    "method": {
      "title": "Method",
      "type": "string",
      "enum": ["All", "Get", "Post", "Put", "Delete", "Patch", "Head"],
      "default": "Get"
    },
    "path": {
      "title": "Path",
      "type": "string",
      "examples": ["/v1/books", "/v2/books", "/v2beta1/books", "/v1/authorize", "/v2/authorize"],
      "default": "/"
    },
    "preflight": {
      "title": "Preflight (CORS)",
      "type": "boolean",
      "default": true
    },
    "authenticate": {
      "title": "Authentication Strategies",
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["IDENTITY", "APIKEY", "USER"]
      },
      "default": [],
      "uniqueItems": true
    },
    "authorize": {
      "title": "Authorization",
      "type": "boolean",
      "default": false
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "authorize": {"const": true}
        },
        "required": ["authorize"]
      },
      "then": {
        "properties": {
          "authenticate": {
            "minItems": 1
          }
        }
      }
    }
  ],
  "additionalProperties": false
}
