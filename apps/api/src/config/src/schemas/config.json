{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://spica.internal/config",
  "type": "object",
  "required": ["module", "options"],
  "properties": {
    "_id": {
      "type": "string",
      "format": "objectid",
      "description": "Unique objectid of the configuration."
    },
    "module": {
      "type": "string",
      "enum": [
        "bucket",
        "function",
        "storage",
        "passport",
        "dashboard",
        "activity",
        "preference",
        "mailer",
        "env_var",
        "status"
      ],
      "description": "Name of the module this configuration belongs to."
    },
    "options": {
      "type": "object",
      "description": "Module-specific configuration options."
    }
  },
  "additionalProperties": false
}
