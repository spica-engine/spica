{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://spica.internal/passport/passwordless-login-start",
  "type": "object",
  "title": "Passwordless login start schema",
  "required": ["username", "provider"],
  "properties": {
    "username": {
      "type": "string",
      "title": "The username of the user"
    },
    "provider": {
      "type": "string",
      "title": "The provider to use for passwordless login",
      "enum": ["email", "phone"]
    }
  },
  "additionalProperties": false
}
