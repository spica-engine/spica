{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://spica.internal/passport/forgot-password-verify",
  "type": "object",
  "title": "Forgot password verify schema",
  "required": ["username", "code", "newPassword", "provider"],
  "properties": {
    "username": {
      "type": "string",
      "title": "Username"
    },
    "code": {
      "type": "string",
      "title": "Verification code",
      "minLength": 6
    },
    "newPassword": {
      "type": "string",
      "title": "New password",
      "minLength": 3
    },
    "provider": {
      "type": "string",
      "title": "Provider to send the reset password code",
      "enum": ["email", "phone"]
    }
  },
  "additionalProperties": false
}
