{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://spica.internal/passport/passwordless-start",
  "type": "object",
  "title": "Passwordless login start schema",
  "required": ["username", "strategy", "value"],
  "properties": {
    "username": {
      "type": "string",
      "title": "The username of the user"
    },
    "strategy": {
      "type": "string",
      "title": "The strategy to use for passwordless login"
    },
    "value": {
      "type": "string",
      "title": "Email or phone number based on configured provider"
    }
  },
  "additionalProperties": false
}
