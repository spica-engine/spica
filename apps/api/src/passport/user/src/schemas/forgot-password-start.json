{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://spica.internal/passport/forgot-password-start",
  "type": "object",
  "title": "Forgot password start schema",
  "required": ["username", "provider"],
  "properties": {
    "username": {
      "type": "string",
      "title": "Username of the user",
      "minLength": 1
    },
    "provider": {
      "type": "string",
      "title": "Provider to send the reset password code",
      "enum": ["email", "phone"]
    }
  },
  "additionalProperties": false
}
