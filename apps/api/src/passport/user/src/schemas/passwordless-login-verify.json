{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://spica.internal/passport/passwordless-login-verify",
  "type": "object",
  "title": "Passwordless login verification schema",
  "required": ["username", "code", "provider"],
  "properties": {
    "username": {
      "type": "string",
      "title": "The username of the user"
    },
    "code": {
      "type": "string",
      "title": "Verification code",
      "description": "6-digit verification code sent to the user",
      "pattern": "^[0-9]{6}$"
    },
    "provider": {
      "type": "string",
      "title": "The provider to use for passwordless login",
      "enum": ["email", "phone"]
    }
  },
  "additionalProperties": false
}
