{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://spica.internal/passport/passwordless-verify",
  "type": "object",
  "title": "Passwordless login verification schema",
  "required": ["username", "strategy", "code"],
  "properties": {
    "username": {
      "type": "string",
      "title": "The username of the user"
    },
    "strategy": {
      "type": "string",
      "title": "Verification strategy",
      "description": "The delivery method used for the verification code"
    },
    "code": {
      "type": "string",
      "title": "Verification code",
      "description": "6-digit verification code sent to the user",
      "pattern": "^[0-9]{6}$"
    }
  },
  "additionalProperties": false
}
