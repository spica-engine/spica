{
  "version": 1,
  "defaultProject": "spica-client",
  "projects": {
    "spica-client": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "../../dist/spica",
            "index": "src/index.html",
            "main": "src/main.ts",
            "tsConfig": "tsconfig.json",
            "polyfills": "src/polyfills.ts",
            "assets": [
              {
                "glob": "**/*",
                "input": "assets",
                "output": "assets/"
              },
              {
                "glob": "**/*",
                "input": "../../node_modules/monaco-editor-core",
                "output": "./assets/function"
              }
            ],
            "styles": [
              "src/styles.scss",
              "../../node_modules/cropperjs/dist/cropper.css",
              "../../node_modules/leaflet/dist/leaflet.css"
            ],
            "scripts": [
              "../../node_modules/cropperjs/dist/cropper.js"
            ]
          },
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": true,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": true,
              "buildOptimizer": true,
              "es5BrowserSupport": true,
              "fileReplacements": [
                {
                  "replace": "environments/environment.ts",
                  "with": "environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "spica-client:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "spica-client:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "spica-client:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": { 
            "karmaConfig": "./karma.conf.js",
            "main": "src/test.ts",
            "tsConfig": "tsconfig.spec.json",
            "polyfills": "src/polyfills.ts",
            "assets": [
              {
                "glob": "**/*",
                "input": "../../node_modules/monaco-editor-core",
                "output": "./assets/function"
              },
              {
                "glob": "**/*",
                "input": "../../node_modules/leaflet/dist/images",
                "output": "assets/"
              }
            ],
            "styles": [
              "src/styles.scss",
              "../../node_modules/cropperjs/dist/cropper.css",
              "../../node_modules/leaflet/dist/leaflet.css"
            ],
            "scripts": [
              "../../node_modules/cropperjs/dist/cropper.js"
            ]
          }
        }
      }
    },
    "@spica-client/core": {
      "root": "stacks/spica/packages/core",
      "sourceRoot": "stacks/spica/packages/core/src",
      "projectType": "library",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "packages/tsconfig.lib.json",
            "project": "packages/core/ng-package.json"
          }
        }
      }
    },
    "@spica-client/common": {
      "root": "stacks/spica/packages/common",
      "sourceRoot": "stacks/spica/packages/common/src",
      "projectType": "library",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "packages/tsconfig.lib.json",
            "project": "packages/common/ng-package.json"
          }
        }
      }
    },
    "@spica-client/material": {
      "root": "stacks/spica/packages/material",
      "sourceRoot": "stacks/spica/packages/material/src",
      "projectType": "library",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "packages/tsconfig.lib.json",
            "project": "packages/material/ng-package.json"
          }
        }
      }
    }
  },
  "cli": {
    "packageManager": "yarn"
  },
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "app",
      "styleext": "scss"
    },
    "@schematics/angular:directive": {
      "prefix": "app"
    }
  }
}
