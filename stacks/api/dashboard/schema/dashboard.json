{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://spica.internal/dashboard",
  "type": "object",
  "required": ["name"],
  "properties": {
    "name": {
      "type": "string"
    },
    "icon": {
      "type": "string"
    },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "url", "type"],
        "properties": {
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "pattern": "^(https?:\\/\\/)(.*)"
          },
          "type": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
