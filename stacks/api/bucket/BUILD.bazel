package(default_visibility = ["//visibility:public"])

load("@npm_bazel_typescript//:defs.bzl", "ts_library")
load("@npm_bazel_jasmine//:index.bzl", "jasmine_node_test")
load("//tools/dgeni:index.bzl", "docs")

ts_library(
    name = "bucket",
    srcs = [
        "bucket.controller.ts",
        "bucket.module.ts",
        "bucket.schema.resolver.ts",
        "bucket.schema.types.ts",
        "bucket.service.ts",
        "bucket.ts",
        "bucket-data.controller.ts",
        "bucket-data.service.ts",
        "cache.ts",
        "index.ts",
    ],
    data = glob(["schemas/*.json"]),
    module_name = "@spica-server/bucket",
    deps = [
        "//packages/core",
        "//packages/core/schema",
        "//packages/database",
        "//stacks/api/bucket/history",
        "//stacks/api/bucket/realtime",
        "//stacks/api/passport",
        "//stacks/api/preference",
        "@npm//@nestjs/common",
        "@npm//@nestjs/core",
        "@npm//@types/archiver",
        "@npm//@types/deep-diff",
        "@npm//@types/diff-match-patch",
        "@npm//@types/json-schema",
        "@npm//@types/mongodb",
        "@npm//@types/node",
        "@npm//ajv",
        "@npm//archiver",
        "@npm//cron",
        "@npm//deep-diff",
        "@npm//diff-match-patch",
        "@npm//locale",
    ],
)

ts_library(
    name = "test_lib",
    testonly = True,
    srcs = glob(["*.spec.ts"]),
    tsconfig = "//:tsconfig.json",
    deps = [
        ":bucket",
        "//packages/core/schema",
        "//packages/database/testing",
        "//stacks/api/preference",
        "@npm//@nestjs/testing",
        "@npm//@types/jasmine",
        "@npm//@types/node",
    ],
)

jasmine_node_test(
    name = "test",
    srcs = [":test_lib"],
    coverage = True,
)

docs(
    name = "docs",
    srcs = glob(["**/*.ts"]),
    tags = ["bucket-docs"],
    exports = [
        "BucketController",
        "BucketDataController",
    ],
    deps = [
        "//packages/database",
        "//stacks/api/passport",
    ],
)
