{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
   // "noUnusedLocals": true,
    "target": "es2018",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": ["es2015", "dom"],
    "paths": {
      "@spica-server/*": ["./packages/*", "./stacks/api/*", "./stacks/api/*/src"],
      "@spica-client/*": ["./stacks/spica/packages/*", "./stacks/spica/src/*"]
    }
  },
  "bazelOptions": {
    "suppressTsconfigOverrideWarnings": true,
    "devmodeTargetOverride": "es2018"
  },
  "exclude": ["node_modules", "dist", "bazel-*"]
}
